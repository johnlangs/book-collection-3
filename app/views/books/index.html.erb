<h1> Books </h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<ul>
  <li> <%= link_to "Add new Book", new_book_path%> </li>
</ul>

<table>
  <tr>
    <th> Id | </th>
    <th> Book Title | </th>
    <th> Author | </th>
    <th> Price | </th>
    <th> Publish Date | </th>
    <th> Show | </th>
    <th> Edit | </th>
    <th> Delete | </th>
  </tr>

  <% @books.each do |book| %>
    <tr>
    <td> <%= book.id %> </td>
    <td> <%= book.title %> </td>
    <td> <%= book.author %> </td>
    <td> <%= book.price %> </td>
    <td> <%= book.published_date %> </td>
    <td> <%= link_to 'Show', book_path(book) %> </td>
    <td> <%= link_to 'Edit', edit_book_path(book) %> </td>
    <td> <%= link_to 'Delete', delete_book_path(book), class: 'action delete'%> </td>
    </tr>
  <% end %>
</table>
